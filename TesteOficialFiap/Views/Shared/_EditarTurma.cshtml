<div class="modal fade" id="editarTurmaModal" tabindex="-1" aria-labelledby="editarTurmaModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editarTurmaModalLabel">Editar Turma</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="editarTurmaForm">
                    <input type="hidden" id="editarTurmaId">
                    <div class="mb-3">
                        <label for="nomeEditarTurma" class="form-label">Nome</label>
                        <input type="text" class="form-control" id="nomeEditarTurma" name="Nome" required>
                    </div>
                    <div class="form-check mb-3">
                        <input class="form-check-input" type="checkbox" id="ativoEditarTurma" name="Ativo">
                        <label class="form-check-label" for="ativoEditarTurma">Ativo</label>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" id="saveEditarTurmaBtn">Salvar</button>
            </div>
        </div>
    </div>
</div>
